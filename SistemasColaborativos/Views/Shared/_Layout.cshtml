<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Seminario Sistemas Colaborativos", "Index", "Turnos", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
                @if (@Session["Usuario"] != null)
                {
                    <span class="navbar-right navhead" style="margin-top: 1em; color:white !important;">
                        Bienvenido: @Session["UsuarioLogueado"] @Session["Usuario"] - @Html.ActionLink("Cerrar sesión", "Logout", "Login", new { area = "" }, new { @style = "color:white !important;" })
                    </span>
                }
                @if (@Session["Usuario"] == null)
                {
                    <a href="@Url.Action("Index", "Login")" class="navbar-right navhead" style="margin-top: 1em; color:white !important;">Iniciar sesión</a>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
       @* <hr />*@
        @*<footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
