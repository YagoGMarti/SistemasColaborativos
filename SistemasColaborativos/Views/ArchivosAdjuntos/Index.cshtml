@model IEnumerable<SistemasColaborativos.Models.ArchivoAdjunto>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de archivos</h2>

@Html.Partial("CrearPartial", new SistemasColaborativos.Models.ArchivoAdjunto())

@if (ViewBag.Errores != null)
{
    <span class="text-danger">@ViewBag.Errores</span>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Formato)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Formato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContentLength) KB
            </td>
            <td>
                @Html.ActionLink("Descargar", "Adjunto", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { onclick = "return confirm('Desea eliminar?');" })
            </td>
        </tr>
    }
</table>

