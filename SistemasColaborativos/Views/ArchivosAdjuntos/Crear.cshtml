@model SistemasColaborativos.Models.ArchivoAdjunto

@{
    ViewBag.Title = "Subir archivo";
}

<h2>Subir archivo</h2>

@using (Html.BeginForm("Crear", "ArchivosAdjuntos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.TextBoxFor(model => model.Imagen, new { type = "file", name = "Imagen", @class = "form-control" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Subir" class="btn btn-default" />
        </div>
    </div>

    @if (ViewBag.Errores != null)
    {
        <span class="text-danger">@ViewBag.Errores</span>
        <br><br>
    }
</div>
}
