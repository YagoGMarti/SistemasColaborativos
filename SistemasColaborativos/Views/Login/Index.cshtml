@model SistemasColaborativos.Transitional.InicioSesion

@{
    ViewBag.Title = "Login";
}

@if (@Session["Usuario"] == null)
{
    using (Html.BeginForm("Index", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <br>
        <div class="form-horizontal col-md-5">
            <div class="form-group">
                @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "control-label col-md-5" })
                @Html.EditorFor(model => model.Usuario)
                @Html.ValidationMessageFor(model => model.Usuario)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Clave, htmlAttributes: new { @class = "control-label col-md-5" })
                @Html.EditorFor(model => model.Clave)
                @Html.ValidationMessageFor(model => model.Clave)
            </div>

            <div class="form-group">
                <input type="submit" value="Iniciar sesión" class="btn col-md-offset-5 col-md-3" />
            </div>
            @if (@ViewBag.FailedLoggin != null)
            {
                <div class="has-error col-md-offset-5">
                    <span class="text-danger" style="margin-top:50px">@ViewBag.FailedLoggin</span>
                </div>
            }
        </div>
    }
}

@if (@Session["Usuario"] != null)
{
    <br>
    <span>Primero debe <a href="@Url.Action("Logout", "Login")" style="color:black !important;">Cerrar sesión</a></span>
}
